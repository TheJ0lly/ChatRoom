<Window x:Class="ChatRoom.Views.JoinServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatRoom.Views"
        mc:Ignorable="d"
        Title="Join Server" Height="200" Width="250">
    <StackPanel>
        <Label Content="Username" HorizontalAlignment="Center" Margin="-44 0 0 0"/>
        <TextBox Name="UserBox" Text=""  MinWidth="100" HorizontalAlignment="Center"/>
        <Label Name="IpLabel" Content="IP Address:" HorizontalAlignment="Center" Margin="-38 0 0 0"/>
        <TextBox Name="IpBox" Text="" MinWidth="100" HorizontalAlignment="Center"/>
        <Label Name="PortLabel"  Content="Port:" HorizontalAlignment="Center" Margin="-72 0 0 0"/>
        <TextBox Name="PortBox"  Text="" MinWidth="100" HorizontalAlignment="Center"/>
        <Button Content="Join" HorizontalAlignment="Center" MinWidth="100" Margin="0 10 0 0" Click="Button_Click"/>
    </StackPanel>
</Window>
