<Window x:Class="ChatRoom.Views.NewServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatRoom.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Create a new server" Height="120" Width="300">

    <StackPanel>
        <Label Content="Choose a name for the new server" HorizontalAlignment="Center"/>
        <TextBox MinWidth="200" HorizontalAlignment="Center" Name="ServerNameBox"/>
        <Button Content="Create" MinWidth="100" HorizontalAlignment="Center" Margin="0 10 0 0" Click="Button_Click"/>
    </StackPanel>
</Window>
